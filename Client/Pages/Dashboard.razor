    <div class="row">
        <div class="col-sm-8 col-lg-8 my-3 my-lg-5">
            <RadzenRadialGauge Style="width: 100%; height: 400px;">
                <RadzenRadialGaugeScale StartAngle="-150" EndAngle="150" Step="10" Min="0" Max="100">
                                    <RadzenRadialGaugeScalePointer Value=@value Length="0" ShowValue=@showValue>
                                        <Template Context="pointer">
                                            <h2>
                                                @pointer.Value <div></div>
                                            </h2>
                                        </Template>
                                    </RadzenRadialGaugeScalePointer>
                                    <RadzenRadialGaugeScaleRange From="0" To="49" Fill="red"/> 
                                    <RadzenRadialGaugeScaleRange From="50" To="79" Fill="orange" />
                                    <RadzenRadialGaugeScaleRange From="80" To="100" Fill="green" />
                                </RadzenRadialGaugeScale>
            </RadzenRadialGauge>
