<PageTitle>Login</PageTitle>

<RadzenRow AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
    <RadzenCard Style="width: 900px; height: 670px">
        <RadzenRow AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
            <RadzenColumn Size="4">
                <RadzenImage Path="images/loginperfil.png" Style="width: 300px; height: 645px" />
            </RadzenColumn>
                <RadzenColumn Size="6" Offset="2">
                    <RadzenRow Size="8" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
